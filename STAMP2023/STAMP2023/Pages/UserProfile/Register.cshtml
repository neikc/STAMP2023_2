@page
@model UserProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.13/tailwind.min.css">
<div >
    @* logo *@
    <div class="relative">
        <div class=" flex items-center justify-center w-full mt-8">
            <div class="w-10/12 flex items-center justify-center" style="background-color: #F8F1F1; height:360px; border-radius: 0px 0px 60px 60px">
                <img src="~/image/Header and Footer/Logo.png" alt="logo">
            </div>

        </div>
        <div class="absolute flex items-end" style="bottom:-100px; left:200px">
            <object data="~/image/Profile/DefaultProfileAvatar.svg" type="image/svg+xml"></object>
            <span class="mb-4">Tên nguời dùng</span>
        </div>
    </div>

    @* options *@
    <div class="mt-40 flex items-center justify-around">
        @* options component *@
        <div class="flex items-center justify-center" style="background-color: #E8AA42; width:350px;height:110px; border-radius:15px">
            <span>Tac Pham</span>
        </div>

        @* options component *@
        <div class="flex items-center justify-center" style="background-color: #E8AA42; width:350px;height:110px; border-radius:15px">
            <span>Bảng xếp hạng</span>
        </div>

        @* options component *@
        <div class="flex items-center justify-center" style="background-color: #E8AA42; width:350px;height:110px; border-radius:15px">
            <span>Đăng kí</span>
        </div>        
    </div>

@* menu *@
    <div class="text-yellow-400 flex items-center justify-around mt-10">
        <div class="px-10" style="border-bottom: 3px solid blue">
            <span>Đăng kí tác phẩm</span>
        </div>

        <div class="px-10">
            <span>Đăng kí talkshow</span>
        </div>
    </div>
    @* dang ky tac pham *@
    <div class="grid grid-cols-2 mt-12" style="font-family: Arial">
        @* card *@
        <div class="bg-gray-200 flex flex-col items-center justify-center rounded-xl mx-auto" style="width:500px; height:350px">
            <div>
            <h2 class="font-bold text-gray-400 mb-4" style="font-size: 36px; ">50%</h2>
            <p>Nhấp vào đây để tải ảnh lên</p>
            </div>
        </div>

        @* card *@
        <div class="bg-gray-200 flex flex-col items-center justify-center rounded-xl mx-auto" style="width:500px; height:350px">
            <div>
            <h2 class="font-bold text-gray-400 mb-4" style="font-size: 36px; ">100%</h2>
            <p>Nhấp vào đây để tải ảnh lên</p>
            </div>
        </div>

    </div>

        @* saved items *@
        <div class="w-full text-left">
            <span class="ml-40">Tác phẩm đã lưu</span>
            <hr class="mx-auto w-10/12" style="background-color:#E57C23; border: 1px solid #E57C23">
        </div>
        <div class="grid gird-cols-12 mt-6">
            @* item image *@
            <div class="col-start-1 col-end-5 mx-auto">
                <img src="" alt="" class="bg-gray-200 rounded-xl" style="width: 250px; height:200px">
            </div>
            @* item description *@
            <div class="col-start-6 col-end-12">
                <textarea placeholder="Mo ta tac pham" class="w-full h-full bg-gray-200"></textarea>
            </div>
        </div>

        <div class="text-white ml-12 mt-4 text-right">
            <button class="bg-blue-400 rounded-2xl mr-4" style="width: 150px;">Lưu</button>
            <button class="bg-green-400 rounded-2xl" style="width: 150px;">Nộp bài</button>
        </div>
    @* dang ky talkshow, bo hidden de hien len *@
    <div class="grid grid-cols-2 gap-16 hidden">
        @* talkshow 1 *@
        <div class="w-10/12 mx-auto p-4 border-2 border-black rounded-xl">
            <img src="~/image/Register/Talkshow/TaskshowRegister1.png" alt="" class="w-full mb-4">
            <h4><b class="text-blue-400">S.T.A.M.P 2023 - Stand Together And Make Protection</b> là cuộc thi về thiết kế và triển lãm tem thư được tổ chức bởi Đoàn - Hội khoa Công nghệ thông tin kinh doanh</h4>
            <button class="text-white bg-blue-400 px-12 py-1 font-bold rounded-full mt-8">Đăng ký</button>
        </div>

        @* talkshow 2 *@
        <div class="w-10/12 mx-auto p-4 border-2 border-black rounded-xl">
            <img src="~/image/Register/Talkshow/TaskshowRegister1.png" alt="" class="w-full mb-4">
            <h4><b class="text-blue-400">S.T.A.M.P 2023 - Stand Together And Make Protection</b> là cuộc thi về thiết kế và triển lãm tem thư được tổ chức bởi Đoàn - Hội khoa Công nghệ thông tin kinh doanh</h4>
            <button class="text-white bg-blue-400 px-12 py-1 font-bold rounded-full mt-8">Đăng ký</button>
        </div>
    </div>
</div>
